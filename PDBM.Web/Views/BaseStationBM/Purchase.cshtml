    var txtPlaceId = mini.get("PlaceId");
    var txtFileIdList = mini.get("FileIdList");
    var dpPurchaseDate = mini.get("PurchaseDate");
    var txt_GroupPlaceCode = mini.get("GroupPlaceCode");
