                <td style="width: 80px; text-align: right;">3G逻辑号</td>
                <td>
                    <input id="G3Number" name="G3Number" class="mini-textbox" style="width:200px;" />
                </td>
                <td style="width: 80px; text-align: right;">4G逻辑号</td>
