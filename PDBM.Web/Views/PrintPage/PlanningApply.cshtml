@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>基站建设申请</title>
    @Styles.Render("~/Content/print_css")
</head>
<body>
    <div style="width:100%; text-align:center;">
        <table class="table" cellpadding="0" cellspacing="0" style="margin: auto; width: 80%">
            <tr>
                <td colspan="4" align="center" style="font-size:11pt;">
                    <b>
                        @if (@ViewData["OrderCode"].ToString() == "")
                        {
                            @:基站建设申请
                        }
                        else
                        {
                            @:基站建设申请(@ViewData["OrderCode"])
                        }
                    </b>
                </td>
            </tr>
            <tr>
                <td style="width:90px;" align="right">申请部门</td>
                <td style="width:200px;" align="left">@ViewData["DepartmentName"]</td>
                <td style="width:90px;" align="right">申请人</td>
                <td style="width:200px;" align="left">@ViewData["CreateFullName"]</td>
            </tr>
            <tr>
                <td style="width:90px;" align="right">标题</td>
                <td style="width:200px;" align="left">@ViewData["Title"]</td>
                <td style="width:90px;" align="right">规划日期</td>
                <td style="width:200px;" align="left">@ViewData["CreateDateText"]</td>
            </tr>            
        </table>
        <table class="table" cellpadding="0" cellspacing="0" style="margin: auto; width: 80%">
            @if (@ViewData["PlanningApplyDetailHtml"].ToString() != "")
            {
                <tr>
                    <td colspan="4" style="width:1000px;">
                        @Html.Raw(ViewData["PlanningApplyDetailHtml"])
                    </td>
                </tr>
            }
        </table>
        <table class="table" cellpadding="0" cellspacing="0" style="margin: auto; width: 80%">
            @if (@ViewData["WFActivityInstancesInfoHtml"].ToString() != "")
            {
                <tr>
                    <td colspan="4" style="width:1000px;">
                        @Html.Raw(ViewData["WFActivityInstancesInfoHtml"])
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
