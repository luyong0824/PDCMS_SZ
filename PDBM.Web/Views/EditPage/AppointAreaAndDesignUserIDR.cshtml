<div id="frmRemodeling" class="form">
    <input class="mini-hidden" id="Id" name="Id" value="@ViewData["Id"]" />
    <input class="mini-hidden" id="WFActivityInstanceId" name="WFActivityInstanceId" value="@ViewData["WFActivityInstanceId"]" />
    <input class="mini-hidden" id="PlaceId" name="PlaceId" value="@ViewData["PlaceId"]" />
    <input class="mini-hidden" id="FileIdList" name="FileIdList" value="@ViewData["FileIdList"]" />
    <table style="width: 100%;">
        <tr>
            <td style="width: 80px; text-align: right;">单据编号</td>
            <td>
                <input id="OrderCode" name="OrderCode" class="mini-textbox" readonly="true" style="width: 200px;" value="@ViewData["OrderCode"]" />
            </td>
            <td style="width: 80px; text-align: right;">申请日期</td>
            <td>
                <input id="CreateDateText" name="CreateDateText" class="mini-textbox" readonly="true" style="width: 200px;" value="@ViewData["CreateDateText"]" />
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">室分名称</td>
            <td colspan="3">
                <input id="PlaceName" name="PlaceName" class="mini-textbox" readonly="true" style="width: 200px;" value="@ViewData["PlaceName"]" />
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">室分类型</td>
            <td>
                <input id="PlaceCategoryName" name="PlaceCategoryName" class="mini-textbox" readonly="true" style="width: 200px;" value="@ViewData["PlaceCategoryName"]" />
            </td>
            <td style="width: 80px; text-align: right;">重要性程度</td>
            <td>
                <input id="ImportanceName" name="ImportanceName" class="mini-textbox" readonly="true" style="width: 200px;" value="@ViewData["ImportanceName"]" />
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">区域</td>
            <td>
                <input id="AreaName" name="AreaName" class="mini-textbox" readonly="true" style="width: 200px;" value="@ViewData["AreaName"]" />
            </td>
            <td style="width: 80px; text-align: right;">网格</td>
            <td>
                <input id="ReseauName" name="ReseauName" class="mini-textbox" readonly="true" style="width: 200px;" value="@ViewData["ReseauName"]" />
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">经度</td>
            <td>
                <input id="Lng" name="Lng" class="mini-textbox" vtype='float' readonly="true" style="width: 200px;" value="@ViewData["Lng"]" />
            </td>
            <td style="width: 80px; text-align: right;">纬度</td>
            <td>
                <input id="Lat" name="Lat" class="mini-textbox" vtype='float' readonly="true" style="width: 200px;" value="@ViewData["Lat"]" />
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">导航图</td>
            <td>
                <a class="navigationmapedit" onclick="onMapClick();"></a>
            </td>
            <td style="width: 80px; text-align: right;">附件</td>
            <td>
                <table>
                    <tr>
                        <td style="width:16px">
                            <a class="fileedit" onclick="onFileClick();"></a>
                        </td>
                        <td>
                            附件数量：<input id="Count" name="Count" class="mini-textbox" value="@ViewData["Count"]" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">产权</td>
            <td>
                <input id="PlaceOwnerName" name="PlaceOwnerName" class="mini-textbox" readonly="true" style="width: 200px;" value="@ViewData["PlaceOwnerName"]" />
            </td>
            <td style="width: 80px; text-align: right;">拟建网络</td>
            <td>
                <input id="ProposedNetwork" name="ProposedNetwork" class="mini-textbox" readonly="true" style="width:200px;" value="@ViewData["ProposedNetwork"]" />
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">业主名称</td>
            <td>
                <input id="OwnerName" name="OwnerName" class="mini-textbox" readonly="true" style="width:200px;" value="@ViewData["OwnerName"]" />
            </td>
            <td style="width: 80px; text-align: right;">联系人</td>
            <td>
                <input id="OwnerContact" name="OwnerContact" class="mini-textbox" readonly="true" style="width:200px;" value="@ViewData["OwnerContact"]" />
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">联系方式</td>
            <td>
                <input id="OwnerPhoneNumber" name="OwnerPhoneNumber" class="mini-textbox" readonly="true" style="width:200px;" value="@ViewData["OwnerPhoneNumber"]" />
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">详细地址</td>
            <td>
                <input id="DetailedAddress" name="DetailedAddress" class="mini-textarea" readonly="true" style="width: 200px; height: 40px;" value="@ViewData["DetailedAddress"]" />
            </td>
            <td style="width: 80px; text-align: right;">备注</td>
            <td>
                <input id="Remarks" name="Remarks" class="mini-textarea" readonly="true" style="width: 200px; height: 40px;" value="@ViewData["Remarks"]" />
            </td>
        </tr>
    </table>
    <fieldset>
        <legend><b>本次编辑内容</b></legend>
        <table style="width: 100%;">
            <tr>
                <td style="width: 80px; text-align: right;">项目经理</td>
                <td>
                    <input id="AreaManagerId" name="AreaManagerId" style="width:200px;" allowinput="false" class="mini-buttonedit searchbox" showclose="true" text="请选择" value="00000000-0000-0000-0000-000000000000"
                           onbuttonclick="onAreaManagerIdSelectButtonClick" oncloseclick="    onAreaManagerIdSelectButtonCloseClick" onvalidation="onAreaManagerIdValidation" />
                </td>
                <td style="width: 80px; text-align: right;">总设单位</td>
                <td>
                    <input id="GeneralDesignId" name="GeneralDesignId" style="width:200px;" allowinput="false" class="mini-buttonedit searchbox" showclose="true" text="请选择" value="00000000-0000-0000-0000-000000000000"
                           onbuttonclick="onGeneralDesignIdSelectButtonClick" oncloseclick="    onGeneralDesignIdSelectButtonCloseClick" onvalidation="onGeneralDesignIdValidation" />
                </td>
            </tr>
        </table>
    </fieldset>
    <table style="width: 100%;">
        <tr>
            <td align="center" colspan="4">
                <a class="mini-button" iconcls="icon-save" onclick="onSaveClick">保存</a>
            </td>
        </tr>
    </table>
</div>
<script type="text/javascript">
    mini.parse();

    var frmRemodeling = new mini.Form("#frmRemodeling");
    var txtRemodelingId = mini.get("Id");
    var txtWFActivityInstanceId = mini.get("WFActivityInstanceId");
    var txtPlaceId = mini.get("PlaceId");
    var txtFileIdList = mini.get("FileIdList");

    var beAreaManagerId = mini.get("AreaManagerId");
    var beGeneralDesignId = mini.get("GeneralDesignId");

    beAreaManagerId.setValue("@ViewData["AreaManagerId"]");
    beGeneralDesignId.setValue("@ViewData["GeneralDesignId"]");
    beAreaManagerId.setText("@ViewData["AreaManagerName"]");
    beGeneralDesignId.setText("@ViewData["GeneralDesignName"]");

    var count = mini.get("Count");
    count.setWidth("10px");
    if (count.setReadOnly) count.setReadOnly(true);     //只读
    if (count.setIsValid) count.setIsValid(true);      //去除错误提示
    if (count.addCls) count.addCls("asLabel");          //增加asLabel外观

    function onAreaManagerIdSelectButtonClick() {
        var beSelect = this;
        mini.open({
            url: "@Url.RouteUrl(new { controller = "CustomControl", action = "UserSelection" })",
            title: "选择项目经理",
            width: 620,
            height: 350,
            allowResize: false,
            ondestroy: function (action) {
                if (action == "ok") {
                    var iframe = this.getIFrameEl();
                    var data = iframe.contentWindow.GetData();
                    data = mini.clone(data);
                    beSelect.setValue(data.id);
                    beSelect.setText(data.text);
                }
                else if (action == "cancel") {
                    beSelect.setValue("00000000-0000-0000-0000-000000000000");
                    beSelect.setText("请选择");
                }
            }
        });
    }

    function onAreaManagerIdSelectButtonCloseClick() {
        this.setValue("00000000-0000-0000-0000-000000000000");
        this.setText("请选择");
    }

    function onGeneralDesignIdSelectButtonClick() {
        var beSelect = this;
        mini.open({
            url: "@Url.RouteUrl(new { controller = "CustomControl", action = "CustomerSelection" })" + "?TypeId=1",
            title: "选择总设单位",
            width: 685,
            height: 410,
            allowResize: false,
            ondestroy: function (action) {
                if (action == "ok") {
                    var iframe = this.getIFrameEl();
                    var data = iframe.contentWindow.GetData();
                    data = mini.clone(data);
                    beSelect.setValue(data.id);
                    beSelect.setText(data.text);
                }
                else if (action == "cancel") {
                    beSelect.setValue("00000000-0000-0000-0000-000000000000");
                    beSelect.setText("请选择");
                }
                beSelect.validate();
            }
        });
    }

    function onGeneralDesignIdSelectButtonCloseClick() {
        this.setValue("00000000-0000-0000-0000-000000000000");
        this.setText("请选择");
        this.validate();
    }

    function onAreaManagerIdValidation(e) {
        if (e.isValid) {
            if (e.value == "00000000-0000-0000-0000-000000000000") {
                e.errorText = "请选择项目经理";
                e.isValid = false;
            }
        }
    }

    function onGeneralDesignIdValidation(e) {
        if (e.isValid) {
            if (e.value == "00000000-0000-0000-0000-000000000000") {
                e.errorText = "请选择总设单位";
                e.isValid = false;
            }
        }
    }

    function onMapClick() {
        var el = document.body;
        mini.mask({
            el: el,
            cls: 'mini-mask-loading',
            html: '加载中...'
        });
        setTimeout(function () {
            var url, data, getId;
            url = "@Url.RouteUrl(new { controller = "Map", action = "GetPlacePoint" })";
            data = { PlaceId: txtPlaceId.getValue(), AreaId: "00000000-0000-0000-0000-000000000000", PlaceName: "", Lng: 0, Lat: 0, Profession: 2 };
            getId = txtPlaceId.getValue();
            $.ajax({
                url: url,
                data: data,
                type: "get",
                async: false,
                success: function (result, textStatus) {
                    mini.unmask(el);
                    if (result.Id != null && result.Id == getId) {
                        var title;
                        if (txtPlaceId.getValue() == "00000000-0000-0000-0000-000000000000") {
                            title = result.PlanningName;
                        }
                        else {
                            title = result.PlaceName;
                        }
                        mini.open({
                            url: "@Url.RouteUrl(new { controller = "Map", action = "NavigationMap" })",
                            title: title,
                            iconCls: "icon-map",
                            width: 800,
                            height: 550,
                            showMaxButton: true,
                            onload: function () {
                                var iframe = this.getIFrameEl();
                                var data = result;
                                iframe.contentWindow.SetData(data);
                            }
                        });
                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                    mini.unmask(el);
                }
            });
        }, 50);
    }

    function onFileClick() {
        var el = document.body;
        mini.mask({
            el: el,
            cls: 'mini-mask-loading',
            html: '加载中...'
        });
        setTimeout(function () {
            $.ajax({
                url: "@Url.RouteUrl(new { controller = "File", action = "GetPlaceFiles" })",
                data: { PlaceId: txtPlaceId.getValue(), FileIdList: txtFileIdList.getValue() },
                type: "get",
                async: false,
                success: function (result, textStatus) {
                    mini.unmask(el);
                    if (result.Code == null || !result.Code) {
                        mini.open({
                            url: "@Url.RouteUrl(new { controller = "File", action = "FileManager" })",
                            title: "附件",
                            iconCls: "icon-file",
                            width: 620,
                            height: 250,
                            allowResize: false,
                            onload: function () {
                                var iframe = this.getIFrameEl();
                                var data = result;
                                iframe.contentWindow.SetData(data);
                            }
                        });
                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                    mini.unmask(el);
                }
            });
        }, 50);
    }

    function onSaveClick() {
        frmRemodeling.validate();
        if (frmRemodeling.isValid() == false) return;
        var loading = mini.loading("处理中,请稍后...", "保存数据");
        var jsonData = mini.encode(frmRemodeling.getData());
        $.ajax({
            url: "@Url.RouteUrl(new { controller = "EditPage", action = "SaveAreaAndDesignUserR" })",
            data: AddAntiForgeryToken({ data: jsonData }),
            type: "post",
            success: function (result, textStatus) {
                mini.hideMessageBox(loading);
                if (result.Code != null && result.Code == 0) {
                    ShowSucessMessage(result.Message);
                }
            },
            error: function (xmlHttpRequest, textStatus, errorThrown) {
                mini.hideMessageBox(loading);
            }
        });
    }
</script>