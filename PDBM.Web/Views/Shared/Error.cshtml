@{Layout = null;}
@model HandleErrorInfo
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>发生异常</title>
</head>
<body>
    <div>
        <div>
            <p>
                Exception:
            </p>
            <p>
                There was a <b>@Model.Exception.GetType().Name</b> while rendering <b>@Model.ControllerName</b>'s <b>@Model.ActionName</b> action.
            </p>
            <p id="ErrorMsg">
                @Model.Exception.Message
            </p>
        </div>
        <div>
            <p>
                Stack trace:
            </p>
            <pre>@Model.Exception.StackTrace</pre>
        </div>
    </div>
</body>
</html>